---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import Button from '~/components/ui/Button.astro';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  priceDetails = [],
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-5xl ${classes?.container ?? ''} mb-8`} bg={bg}>
  <!-- Headline Section -->
  <Headline title={title} subtitle={subtitle} tagline={tagline} classes={classes?.headline as Record<string, string>} />

  <!-- Pricing Cards -->
  <div class="flex flex-wrap justify-center gap-4">
    {
      priceDetails.map(({ label, price, description }) => (
        <div class="w-full sm:w-1/2 lg:w-1/3 bg-white text-black rounded-lg shadow-md p-8 text-center border border-gray-200">
          <h2 class="text-3xl font-bold mb-6">{label}</h2>
          <p class="text-3xl font-bold mb-4">{price}</p>
          <p class="text-sm text-gray-600 mb-4">{description}</p>
        </div>
      ))
    }
  </div>

  <!-- Call to Action Button -->
  <div class="flex justify-center mt-8">
    <Button text="BOOK NOW " variant="primary" href="/contact" class="w-full sm:w-auto" />
  </div>
</WidgetWrapper>
