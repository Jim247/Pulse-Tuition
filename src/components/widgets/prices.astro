---
import WidgetWrapper from '../ui/WidgetWrapper.astro';
import Headline from '../ui/Headline.astro';
import Button from '../ui/Button.astro';

const {
    title = await Astro.slots.render('title'),
    subtitle = await Astro.slots.render('subtitle'),
    tagline,
    id,
    isDark = false,
    classes = {},
    bg = await Astro.slots.render('bg-card'),
    priceDetails = [], // Array of price tiers
} = Astro.props;
---
<WidgetWrapper
    id={id}
    isDark={isDark}
    containerClass={`max-w-4xl mx-auto ${classes?.container ?? ''}`}
    bg={bg}
>
    <Headline title={title} subtitle={subtitle} tagline={tagline} />
    <!-- Pricing Cards -->
    <div class="flex flex-wrap justify-center gap-4">
        {priceDetails.map(({ label, price, description }) => (
            <div class="w-full sm:w-1/2 lg:w-1/3 bg-white text-black rounded-lg shadow-md p-8 text-center">
                <h2 class="text-3xl font-bold mb-4">{label}</h2>
                <p class="text-4xl font-bold mb-2">{price}</p>
                <p class="text-sm text-gray-600 mb-4">{description}</p>
            </div>
        ))}
        <div class="px-1 w-full sm:w-1/2 lg:w-1/3 mt-4">
            <Button text="Book Now" variant="primary" class="w-full" />
        </div>
    </div>
</WidgetWrapper>
