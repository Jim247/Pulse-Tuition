---
import '@fontsource-variable/inter';
import '@fontsource/cabin/400.css';


// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Cabin', sans-serif; 
    --aw-font-serif: 'Cabin', sans-serif; 
    --aw-font-heading: 'Cabin', sans-serif; 

    --aw-color-primary: olivegreen
    --aw-color-secondary: rgb(208, 210, 214);
    --aw-color-accent: rgb(0, 57, 143);

    --aw-color-text-heading:  rgb(255, 255, 255);
    --aw-color-text-default: rgb(254, 255, 255);
    --aw-color-text-muted: rgb(255, 255, 255);
    --aw-color-bg-page: rgb(69 77 71);

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
