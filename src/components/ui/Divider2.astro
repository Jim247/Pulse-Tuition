---
export interface Props {
    className?: string;
    fillColor?: string;
    isUpsideDown?: boolean;
}

const { 
    className = 'custom-shape-divider-top-1735572268', 
    fillColor = '#f1f5f9', // Changed to slate-100 color
  isUpsideDown = true
} = Astro.props;
---

<div class={`${className} ${isUpsideDown ? 'shape-divider-bottom' : ''}`}>
  <svg 
    data-name="Layer 1" 
    xmlns="http://www.w3.org/2000/svg" 
    viewBox="0 0 1200 120" 
    preserveAspectRatio="none"
    style={isUpsideDown ? 'transform: rotate(180deg);' : ''}
  >
    <path
      d="M0,0V6c0,21.6,291,111.46,741,110.26,445.39,3.6,459-88.3,459-110.26V0Z"
      class="shape-fill"
      style={`fill: ${fillColor};`}></path>
  </svg>
</div>
