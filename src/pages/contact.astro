---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ConditionalForm from '~/components/widgets/ConditionalForm';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->
  <HeroText tagline="Contact" title="Let's Connect!" />

  <!-- Contact Form React Component ******************* -->
  <div class="form-container max-w-xl mx-auto py-8">
    <ConditionalForm />
  </div>
</Layout>
