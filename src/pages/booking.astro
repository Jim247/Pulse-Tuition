---
import Layout from '~/layouts/PageLayout.astro';
// import TutorSelect from '~/components/widgets/TutorSelect.jsx';//
import Hero from '~/components/widgets/Hero.astro';
import Divider from '~/components/ui/Divider.astro';
import ContactForm from '~/components/widgets/ContactForm';
import SmartForm from '~/components/widgets/SmartForm';
import Contact from '~/components/widgets/Contact.astro';

const metadata = {
  title: 'Make a Booking',
  description:
    "Book a music tutor today, please give us as much information as possible and we'll respond as soon as possible",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero
    title="Find a Tutor!"
    subtitle="Book a tutor today, please give us as much information as possible and we'll respond as soon as possible"
    image={{ src: '~/assets/images/piano-lesson.jpeg', alt: 'Hero Image' }}
  />
  <Divider />
  <div class="container flex justify-center lg:w-2/3 xl:w-1/2 mx-auto">
<ContactForm />
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const script = document.createElement('script');
      script.src = 'https://www.google.com/recaptcha/enterprise.js?render=6LeJUr4qAAAAAGipGf-IuSzHA0gCF-awE4WjvlHR';
      script.async = true;
      script.defer = true;
      document.head.appendChild(script);
    });
  </script>
</Layout>
