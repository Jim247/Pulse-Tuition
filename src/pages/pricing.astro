---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import Steps from '~/components/widgets/Steps.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import GuitarLesson from '~/assets/images/guitar-lesson-portrait.jpeg';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Pricing" title="Excellent Value, the Best Tutors in Town" subtitle="" />

  <!-- Pricing Widget ******************* -->

  <Prices
    prices={[
      {
        title: 'Pay as you go',
        subtitle: 'from',
        price: 18,
        period: 'per half-hour lesson',
        items: [
          { description: '30, 40 and 60 minute durations' },
          { description: 'Bespoke tuition from expert tutors' },
          { description: 'Online payment and lesson management gateway' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: './contact',
        },
      },
      {
        title: 'Block Booking',
        subtitle: 'from',
        price: 17,
        period: 'Per half-hour lesson',
        items: [
          { description: '30, 40 and 60 minute durations' },
          { description: 'Save money by booking ahead' },
          { description: 'The same expert tutors' },
          { description: 'Online payment and lesson management gateway' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: './contact',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
    ]}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="A simple journey to finding the perfect Bristol Tutor"
    tagline="simplified process"
    isReversed={true}
    items={[
      { title: 'Find a tutor', icon: 'tabler:number-1' },
      { title: 'Sign up', icon: 'tabler:number-2' },
      { title: 'Book a trial lesson', icon: 'tabler:number-3' },
      { title: 'Confirmation from tutor', icon: 'tabler:number-4' },
      { title: 'Meet your tutor', icon: 'tabler:number-5' },
      { title: 'Confirmation from tutor', icon: 'tabler:number-6' },
      { title: 'Book further lessons', icon: 'tabler:number-7' },
    ]}
    image={{
      src: GuitarLesson.src,
      alt: 'Steps image',
    }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to book?"
    subtitle="Join our community of satisfied customers who have transformed their musicianship with our tutors."
    actions={[
      {
        variant: 'primary',
        text: 'Book Now',
        href: '/booking',
      },
    ]}
  />
</Layout>
