---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import singingImage from '~/assets/images/singing-lessons-bristol.jpeg';
import bristolBridge from '~/assets/images/bristol-bridge-photo.jpeg';

const metadata = {
  title: 'About Us - Singing Lessons Bristol',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero tagline="About Us" image={{ src: singingImage, alt: 'Singing Lessons Bristol Hero Image' }}>
    <Fragment slot="title">
      Discover the Joy of Singing <br />
      <span class="text-highlight">With Expert Guidance</span>
    </Fragment>
    <Fragment slot="subtitle">
      Singing Lessons Bristol offers a personalized approach to unlocking your vocal potential. Whether you're a beginner or an experienced singer, our lessons include warm-ups, tailored vocal exercises, and practice on songs of your choice. <br /><br />
      Key areas of focus include breath control, pitch accuracy, expanding vocal range, and developing expressive performance skills. Our supportive environment is designed to help you grow as a singer, boost your confidence, and achieve your musical goals.
    </Fragment>
  </Hero>

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Vocal Technique',
        description:
          'Master breath control, vocal placement, and posture to build a strong foundation for healthy and effective singing.',
        icon: 'tabler:template',
      },
      {
        title: 'Music Theory',
        description:
          'Understand the basics of music theory, including scales, intervals, and harmony, to enhance your vocal skills.',
        icon: 'tabler:template',
      },
      {
        title: 'Repertoire Building',
        description:
          'Expand your vocal repertoire by exploring genres such as classical, pop, jazz, and musical theatre.',
        icon: 'tabler:template',
      },
      {
        title: 'Performance Skills',
        description:
          'Develop stage presence, emotional expression, and confidence to shine during live performances or auditions.',
        icon: 'tabler:template',
      },
      {
        title: 'Improvisation',
        description:
          'Learn to experiment with your voice and improvise confidently across various musical styles.',
        icon: 'tabler:template',
      },
      {
        title: 'Ear Training',
        description:
          'Improve your pitch accuracy and musical sensitivity with exercises designed to sharpen your listening skills.',
        icon: 'tabler:template',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Values"
    subtitle="We believe in creating a supportive and inspiring learning environment that fosters creativity, growth, and a lifelong love for music."
    items={[
      {
        title: 'Personalized Lessons',
        description:
          'Every student is unique, and we tailor lessons to match individual goals and aspirations.',
      },
      {
        title: 'Continuous Improvement',
        description:
          'We encourage consistent practice and provide constructive feedback to help students achieve their full potential.',
      },
      {
        title: 'Inspiring Confidence',
        description:
          'Our goal is to help students build confidence in their abilities, both in singing and in life.',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

<!-- Features2 Widget ************** -->
<Features2
title="Where to Find Us"
tagline="Piano Lessons Near You in Bristol"
image={{ src: bristolBridge, alt: 'Bristol Bridge' }}
columns={1}
items={[]}
/>

</Layout>
