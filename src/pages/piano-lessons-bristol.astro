---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import pianoImage from '~/assets/images/piano-lessons-bristol.jpg';
import CallToAction from '~/components/widgets/CallToAction.astro';
import bristolBridge from '~/assets/images/bristol-bridge-photo.jpeg';
import { IconGift } from '@tabler/icons-react';
import Prices from '~/components/widgets/prices.astro';
import StarTestimonials from '~/components/widgets/StarTestimonials.astro';

const metadata = {
  title: 'Piano Lessons Bristol',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero tagline="Piano Lessons Bristol" image={{ src: pianoImage, alt: 'Piano Lessons in Bristol Hero Image' }}>
    <Fragment slot="title">
      Master the Art of the Piano <br />
      <span class="text-highlight">with Expert Lessons</span>
    </Fragment>
    <Fragment slot="subtitle">
      Discover tailored Piano Lessons in Bristol. <br> Designed to help you unlock your musical potential.  Whether you're a complete beginner or looking to refine your skills, our lessons include personalized techniques, music theory, and a wide range of repertoire.<br /><br />
    </Fragment>
  </Hero>

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Proper Technique',
        description:
          'Learn correct posture, hand positioning, and piano playing techniques to establish a strong foundation for your musical journey.',
        icon: 'tabler:template',
      },
      {
        title: 'Music Theory',
        description:
          'Understand scales, chords, and harmony to deepen your knowledge and appreciation of music while playing the piano.',
        icon: 'tabler:template',
      },
      {
        title: 'Repertoire Development',
        description:
          'Explore classical, contemporary, and popular music pieces to build a versatile and enjoyable collection of piano repertoire.',
        icon: 'tabler:template',
      },
      {
        title: 'Improvisation',
        description:
          'Learn to express yourself creatively by improvising in a variety of musical styles, from jazz to classical.',
        icon: 'tabler:template',
      },
      {
        title: 'Performance Skills',
        description:
          'Hone your confidence and stage presence while preparing for live performances and recitals.',
        icon: 'tabler:template',
      },
      {
        title: 'Composition & Songwriting',
        description:
          'Compose your own music and create original piano pieces, combining your creativity with structured theory.',
        icon: 'tabler:template',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Teaching Philosophy"
    subtitle="Our goal is to inspire a love for music while building strong technical skills. Learn piano in a supportive, structured, and engaging way that suits your goals and pace.       Develop essential skills such as finger strength, reading sheet music, and understanding musical dynamics. Our experienced instructors create a supportive environment, ensuring you gain confidence and enjoy your journey into piano mastery."

    items={[
      {
        title: 'Student-Centered Lessons',
        description:
          'Each lesson is tailored to the student’s needs and interests, fostering a positive and encouraging learning environment.',
      },
      {
        title: 'Continuous Growth',
        description:
          'We believe in nurturing a lifelong appreciation for music through consistent improvement and practice.',
      },
      {
        title: 'Building Confidence',
        description:
          'Our lessons focus on building both technical skill and musical confidence, empowering students to perform and enjoy music.',
      },
    ]}
  />
  
  <StarTestimonials
  id="student-testimonials"
  title="What Our Students Say"
  subtitle="Real stories from our students and parents"
  isDark={false}
  testimonials={[
    {
      text: 'My son really enjoyed his lessons with josh he made the lessons enjoyable and made sure my son understood everything he was teaching, would highly recommend josh as a music teacher.',
      name: 'Katie',
      role: 'Parent - Guitar - Bristol',
      rating: 5,
    },
    {
      text: "Adriana has been giving 121 lessons to our 9 year old daughter for the last couple of months. Adriana is super professional and experienced and we've been really happy with the lessons. We highly recommend her.",
      name: 'Oliver',
      role: 'Parent - Vocals - Bristol',
      rating: 5,
    },
  ]}
/>

<Prices
  id="prices"
  tagline="Great Value"
  title="Our Prices"
  DefaultIcon={IconGift}
  subtitle="Choose a plan that suits you best<br>Your first lesson includes 20 minutes, <strong> on us</strong>"
  priceDetails={[
    { label: '30 minutes', price: '£17.50' },
    { label: '60 minutes', price: '£35' },
  ]}
/>
  <!-- Features2 Widget ************** -->
  <Features2
    title="Where to Find Us"
    tagline="Piano Lessons Near You in Bristol"
    image={{ src: bristolBridge, alt: 'Bristol Bridge' }}
    columns={1}
    items={[]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'BOOK NOW',
        href: '/contact',
        target: '_blank',
        icon: 'tabler:download',
      },
    ]}
  >
    <Fragment slot="title">MUSIC LESSONS BRISTOL</Fragment>
    <Fragment slot="subtitle">Don't wait any longer, get the tuition you deserve from our expert tutors!</Fragment>
  </CallToAction>

</Layout>
